<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomizedDialog" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="CustomizedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_login</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseCustomizedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
</style>

    <style name="CustomizedTitleTextView" parent="BaseCustomizedTextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorHintText</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CustomizedFuncItemTextView" parent="BaseCustomizedTextView">
        <item name="android:textSize">@dimen/text_size_func_item</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomizedFuncItemTextViewInMenu" parent="CustomizedFuncItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_func_item</item>
        <item name="android:textColor">@drawable/selector_textview_textcolor_funcitem</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left_func_item</item>
        <item name="android:background">@drawable/selector_textview_bg_funcitem</item>
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="CustomizedLinearLayoutFuncItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_linearlayout_bg_funcitem_dashboard1</item>
        android:addStatesFromChildren="true"
    </style>

    <style name="CustomizedLinearLayoutFuncItem.Highlight" parent="CustomizedLinearLayoutFuncItem">
        <item name="android:background">@drawable/selector_linearlayout_bg_funcitem_dashboard2</item>
    </style>

    <style name="CustomizedFuncItemTextViewInDashboard" parent="CustomizedFuncItemTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:selectable">true</item>
    </style>

    <!--My Appointments-->
    <style name="BaseCustomizedTextView.AppointmentItemHighLightTextView" parent="BaseCustomizedTextView">
        <item name="android:textSize">@dimen/text_size_appointment_item_highlight</item>
    </style>

    <style name="BaseCustomizedTextView.AppointmentItemSubTextView" parent="BaseCustomizedTextView">
        <item name="android:textSize">@dimen/text_size_appointment_item_sub</item>
        <item name="android:textColor">@color/colorHintText</item>
    </style>

    <style name="CustomizedRateBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBarRate</item>
        <item name="colorControlActivated">@color/colorBarRate</item>
    </style>

    <style name="FullScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FullScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="SwitchTheme" parent="FullScreen">
        <!-- active thumb & track color (30% transparency) -->
        <!--<item name="android:colorControlActivated">#50d2c2</item>-->
        <!--<item name="android:colorControlActivated">#148E13</item>-->
        <!-- inactive thumb color -->
        <!--<item name="colorSwitchThumbNormal">#f1f1f1</item>-->

        <!-- inactive track color (30% transparency) -->
        <!--<item name="android:colorForeground">#42221f1f</item>-->
        <item name="android:colorControlActivated">#148E13</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">#50d2c2</item>
    </style>
</resources>
